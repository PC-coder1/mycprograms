        //printf("seats are full, %d");
    
    //}

    //printf("enter availableseats");
    //scanf("%d", &b1.availableseats);


}

void displayoutput() 
{
    
    printf("busid: %d\n", b1.busid);
    printf("busname: %s\n", b1.busname);
    printf("bussource: %s\n", b1.bussource);
    printf("busdest: %s\n", b1.busdest);

    printf("total seats: %d\n", b1.totalseats);
    //if(b1.seatsbooked > MAX){
      //  printf("seats are full, %d");
    
    //}



    printf("seats booked: %d\n", b1.seatsbooked);
    //if(b1.seatsbooked > MAX){
        //printf("seats are full, %d");
    
    //}
    //if(b1.seatsbooked > MAX){
      //  printf("seats are full, %d");
    
    //}

    printf("available seats: %d\n", b1.availableseats);

    if(b1.seatsbooked = MAX){
        printf("seats are full");
    
    }
    //else{
      //  printf("continue your booking");
    //}

}

