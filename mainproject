//macro definition
#define MAX 50 
// type declaration
struct bus  {
    int busid;
    char busname[MAX];
    char bussource[50];
    char busdest[50];
    int totalseats;
    int seatsbooked;
    int availableseats;
    
};
// global variables

struct bus b1;

void acceptInput() {
    printf("enter the busid: ");
    scanf("%d", &b1.busid);

    printf("enter the name of bus1: ");
    scanf("%s", b1.busname);

